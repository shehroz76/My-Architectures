<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_black"
        tools:context=".screens.home.HomeActivity">

    <TextView android:layout_width="match_parent"
              android:layout_height="100dp"
              android:background="@drawable/bg_dialog_round"
              android:text="Retrofit with Room"
              android:gravity="center"
              android:textStyle="italic"
              android:textSize="30dp" app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_margin="30dp"
              android:id="@+id/retroRoom"
              app:layout_constraintVertical_bias="0.339"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="100dp"
              android:background="@drawable/bg_dialog_round"
              android:text="Firebase with Room"
              android:gravity="center"
              android:layout_margin="30dp"
              android:textStyle="italic"
              android:textSize="30dp" app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintVertical_bias="0.027"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/retroRoom"
              app:layout_constraintStart_toStartOf="parent"
              android:id="@+id/textView2"/>

    <Button android:layout_width="227dp" android:layout_height="34dp"
            android:text="LOGOUT"
            android:background="@drawable/bg_dialog_round"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintVertical_bias="0.165"
    />

</androidx.constraintlayout.widget.ConstraintLayout>